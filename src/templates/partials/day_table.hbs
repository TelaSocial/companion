{{#each schedule.days ~}}<div
    id="day-{{@index}}"
    class="
        day
        {{#if @last}}
        last
        {{/if}}
        "
    >
    <h2 class="day-title">
        {{this.shortLabel}}
    </h2>
    <table
        class="table table-bordered">
        <thead>
            <tr>
                <th class="room-name-cell">Salas</th>
                {{#each this.times}}
                <th colspan="{{this.colspan}}">
                    {{this.label}}
                </th>
                {{/each}}
            </tr>
        </thead>
        <tbody>
        {{#each this.rooms}}
            <tr>
                <th class="room-name-cell">
                    {{this.roomName}}
                </th>
                {{#is this.sessions.length '<' 1}}
                    <td class="empty" colspan="{{../../maxColspan}}"></td>
                {{/is}}
                {{#each this.sessions}}
                    {{#if @first}}
                        {{#if this.intervalBeforeColspan }}
                            <td class="empty" colspan="{{this.intervalBeforeColspan}}"></td>
                        {{/if}}
                    {{/if}}
                    {{>session session_tag="td"}}
                    {{#if this.intervalAfterColspan }}
                        <td class="empty" colspan="{{this.intervalAfterColspan}}"></td>
                    {{/if}}
                {{/each}}
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>{{~/each}}
