{{#each this.rooms}}
    <tr class="session-list">
        <th class="room-name-cell">
        {{#withItem @root.schedule.rooms key=this.id}}
            {{this.name}}
        {{/withItem}}
        </th>
        {{#is this.sessions.length '<' 1}}
            <td class="session empty" colspan="{{../../maxColspan}}"></td>
        {{/is}}
        {{#each this.sessions}}
            {{#if this.emptyBefore }}
                <td class="session empty" colspan="{{this.emptyBefore}}"></td>
            {{/if}}
            {{#withItem @root.schedule.sessions key=this.sessionID}}
                {{>session durationColspan=../colspan dayIndex=../../../dayIndex session_tag="td"}}
            {{/withItem}}
            {{#if this.emptyAfter }}
                <td class="session empty" colspan="{{this.emptyAfter}}"></td>
            {{/if}}
        {{/each}}
    </tr>
{{/each}}
