<{{session_tag}}
    id="session-{{this.id}}"
    class="
        session
        list-group-item
    "
    data-id="{{this.id}}"
    data-start="{{this.start}}"
    data-duration="{{this.duration}}"
    data-room="{{this.roomID}}"
    data-zone="{{this.zoneID}}"
    {{#is session_tag 'td'}}
        colspan="{{durationColspan}}"
    {{/is}}
    >
    <dt>
        <h4 class="session-title">
            <a
                href="#session-info-{{this.id}}"
                class="session-title-link collapsed"
                data-toggle="collapse"
                data-parent="#day-{{dayIndex}}"
                >
                <span
                    class="collapse-caret"
                    ></span>
                {{this.title}}
            </a>
        </h4>
        <button
            class="bookmark-button btn"
            type="button"
            >
            <span
                class="icon"></span>
        </button>
    </dt>
    <dd
        id="session-info-{{this.id}}"
        class="session-info collapse"
        >
        <p class="session-abstract panel-body">
            {{this.abstract}}
        </p>
        <h5>Autores</h5>
        <ul>
        {{#withItem @root.schedule.presenters key=this.id}}
        {{#each this}}
            <li class="author {{#if this.main}}main{{/if}}">
                <span href="#" class="author-link">
                    <span class="author-icon"></span>
                    <span class="author-name">
                        {{this.name}}
                    </span>
                </span>
            </li>
        {{/each}}
        {{/withItem}}
        </ul>
        <ul class="nav nav-pills">
            <li>
                <a class="room-link" href="#">
                    <span class="place-icon"></span>
                    {{#withItem @root.schedule.rooms key=this.roomID}}
                        {{this.name}}
                    {{/withItem}}
                </a>
            </li>
            <li>
                <a class="calendar-add-button" href="#">
                    <span class="calendar-add-icon"></span>
                    Add to calendar
                </a>
            </li>
        </ul>
    </dd>
</{{session_tag}}>
