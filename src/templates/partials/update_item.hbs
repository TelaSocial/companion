<div
    class="
        update-item update-type-{{this.updateType}}
        list-group-item
        "
    >
    <dt>
        <span class="change-text">
        {{#is this.updateType 'rename'}}
            foi renomeada
        {{/is}}
        {{#is this.updateType 'room'}}
            mudou de sala
        {{/is}}
        {{#is this.updateType 'start'}}
            mudou de hor√°rio
        {{/is}}
        {{#is this.updateType 'cancel'}}
            foi cancelada
        {{/is}}
        {{#is this.updateType 'new'}}
            entrou na grade
        {{/is}}
        </span>
        <span class="update-title">
